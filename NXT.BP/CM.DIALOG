LOAD.SHIPTO.CTRLS:
*
* routine LOADS  controls on SHIP TO "side" of form
*
CTRLIDS = ''
PROPS   = ''
VALUES  = ''
*
CTRLIDS<-1> = "TXT1SHIPNAME"
PROPS<-1>   = GPVALUE
VALUES<-1>  = SHIPTO_REC<CS_NAME>
*
CTRLIDS<-1> = "TXT1SHIPADDR1"
PROPS<-1>   = GPVALUE
VALUES<-1>  = SHIPTO_REC<CS_ADDR>
*
CTRLIDS<-1> = "TXT1SHIPADDR2"
PROPS<-1>   = GPVALUE
VALUES<-1>  = SHIPTO_REC<CS_ADDR2>
*
CTRLIDS<-1> = "TXT1SHIPCITY"
PROPS<-1>   = GPVALUE
VALUES<-1>  = SHIPTO_REC<CS_CITY>
*
CTRLIDS<-1> = "TXT1SHIPZIP"
PROPS<-1>   = GPVALUE
VALUES<-1>  = SHIPTO_REC<CS_ZIP>
*
LOCATE SHIPTO_REC<CS_STATE> IN STATES.IDX<1> SETTING IDX THEN
   CTRLIDS<-1> = "LST1SHIPST"
   PROPS<-1>   = GPVALUE
   VALUES<-1>  = IDX
END
*
CTRLIDS<-1> = "TXT1SHIPCOUNTRY"
PROPS<-1>   = GPVALUE
VALUES<-1>  = SHIPTO_REC<CS_COUNTRY>
*
CTRLIDS<-1> = "TXT1SHIPPHONE"
PROPS<-1>   = GPVALUE
VALUES<-1>  = SHIPTO_REC<CS_PHONE>
*
CTRLIDS<-1> = "TXT1SHIPFAX"
PROPS<-1>   = GPVALUE
VALUES<-1>  = SHIPTO_REC<CS_FAX>
*
CTRLIDS<-1> = "TXT1SHIPDAYS"
PROPS<-1>   = GPVALUE
VALUES<-1>  = SHIPTO_REC<CS_SHIP_DAYS>
*
CTRLIDS<-1> = "CHKDEFAULT"
PROPS<-1>   = GPVALUE
IF CM_REC<CM_DEFAULT_SHIPTO> = SHIPTO_ID THEN
   VALUES<-1>  = 1
END ELSE
   VALUES<-1>  = 0
END
*
CALL ATGUISETPROPS(GUIAPP,GUIFRM,CTRLIDS,PROPS,VALUES,GUIERRORS,GUISTATE)
IF GUIERRORS<1> >= NXT.GUI.ERROR.LEVEL THEN GOSUB GUI.ERROR
**
RETURN
