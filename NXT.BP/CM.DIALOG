*
* EQUATE:
*
*
* VARIABLES:
* CALLER_ACTION - SET BY CALLER
* CM_EDIT  - EDIT CUSTOMER RECORD CM_ID
* CM_NEW   - ADD NEW CUSTOMER, ON EXIT CM_ID IS NEW CUSTOMER ID
* CM_SHIP_EDIT  - EDIT CUSTOMER SHIP TO RECORD CM_ID, SHIPTO_ID
* CM_SHIP_NEW   - ADD NEW SHIP TO FOR CM_ID, ON EXIT SHIPTO_ID NEW SHIP TO RECORD ID
*
* ERROR_STATUS - RETURNED ERROR STATUS NUMBER OR NULL
*
* FILES:
*
*
* DESIGN DESCRIPTION:
*
!
** INCLUDE STANDARD VARIABLE, EQUATES
*
$INCLUDE NXT.INCLUDES NXT.COMMON
$INCLUDE NXT.INCLUDES NXT.EQUATES
$INCLUDE NXT.INCLUDES NXT.ERR.MSGS
$INCLUDE NXT.INCLUDES CUSTOMERS.H
$INCLUDE NXT.INCLUDES SHIP_TO.H
*
$INCLUDE GUIBP ATGUIEQUATES
*
PROG_ID   = "CM.DIALOG"
GUIERRORS = ''
GUIAPP = "CM"  ;* SEED GUIAPP AND GUIFRM PRIOR TO ACTUAL EVENT WAIT LOOP
GUIFRM = "CM"
*
* Open the GUI project file
OPEN 'NXT.FORMS' TO GUI.PROJECT.FILE ELSE
   CALL ATGUIERROR(3,'CM','',0,GRFATAL,"'NXT.FORMS' is not a file name.",GUIERRORS)
   RETURN
END
* Read the GUI template into TEMPLATE
READ TEMPLATE FROM GUI.PROJECT.FILE,'CM' ELSE
   CALL ATGUIERROR(3,'CM','',0,GRFATAL,"'CM' is not on file.",GUIERRORS)
   RETURN
END
* Add your equates and code to open files here...
*
*
************************************************************
*
*
*-->BEGIN GUI HEADER<--*
* If GUISTATE is not NULL, assume GUI has been initialized
IF GUISTATE EQ '' THEN
   CALL ATGUIINIT2(TEMPLATE<2,2>,'',GUIERRORS,GUISTATE)
   IF GUIERRORS<1> >= 3 THEN RETURN
END
* Load the dialog project template
CALL ATGUIRUNMACRO(TEMPLATE,'',GUIERRORS,GUISTATE)
IF GUIERRORS<1> >= 3 THEN RETURN
*-->END GUI HEADER<--*
*
*
************************************************************
*
*
*-->BEGIN GUI STARTUP<--*
ACCEPT = 0 ;* Assume dialog cancelled (update in your OK button Click handler)
* code to load initial values here...
*
* CALLER_ACTION - DEFINES HOW WE START UP
* CM_EDIT  - EDIT CUSTOMER RECORD CM_ID
* CM_NEW   - ADD NEW CUSTOMER, ON EXIT CM_ID IS NEW CUSTOMER ID
* CM_SHIP_EDIT  - EDIT CUSTOMER SHIP TO RECORD CM_ID, SHIPTO_ID
* CM_SHIP_NEW   - ADD NEW SHIP TO FOR CM_ID, ON EXIT SHIPTO_ID NEW SHIP TO RECORD ID
*
ERROR_STATUS = ''     ;* SETUP ERRORS TO NONE
ERROR_MSG    = ''
CM_REC = ''           ;* CUSTOMER RECORD
SHIPTO_REC = ''       ;* SHIP TO RECORD
SAVE_CM_REC = ""      ;* WE USE SAVE_CM TO SEE IF ANYTHING HAS CHANGED
SAVE_SHIPTO_REC = ''  ;* SAME FOR SHIP_TO RECORD
DEFAULT_CREATED = @TRUE  ;* FLAG TO CREATE DEFAULT SHIPTO ON NEW CUSTOMER CREATION
*
* CREATE LISTS FOR  DROP DOWN CONTROLS
*
TERMS.LIST  = ''  ;* LIST FOR PAYMENT TERMS SELECTION
TERMS.IDX   = ''
STATES.LIST = ''  ;* LIST FOR STATE SELECTION
STATES.IDX  = ''
STATUS.LIST = ''  ;* LIST FOR CUSTOMER STATUS SELECTION
STATUS.IDX  = ''
CALL LIST.LOAD(C.VALIDATION_FILE,"STATES","2",'',STATES.LIST,STATES.IDX,LIST.COUNT,EMSG)
CALL LIST.LOAD(C.VALIDATION_FILE,"TERMS","2",'',TERMS.LIST,TERMS.IDX,LIST.COUNT,EMSG)
CALL LIST.LOAD(C.VALIDATION_FILE,"CM.STATUS","2",'',STATUS.LIST,STATUS.IDX,LIST.COUNT,EMSG)
GOSUB LOAD.CM.LISTS   ;* LOAD CONTROLS WITH THIS INFO
*
BEGIN CASE
   CASE CALLER_ACTION = CM_EDIT
      GOSUB GET.CM.REC
      SAVE_CM_REC = CM_REC              ;* WE USE SAVE_CM TO SEE IF ANYTHING HAS CHANGED
      IF ERROR_STATUS = ERR_NOF THEN    ;* WE SHOULD NOT BE HERE WITH CUST NOF, CLEAN UP AND LEAVE
         RELEASE C.FILE.VAR(C.CUSTOMERS), CM_ID
         ERROR_MSG = "EDIT OF NON EXISTANT CUSTOMER: ":CM_ID
         ERROR_STATUS = ERR_SYS
         GOTO STARTUP.999
      END ELSE
         ERROR_STATUS = ''
      END
*
      GOSUB LOAD.CM.CTRLS         ;* LOAD CM CONTROLS
*
      IF CM.EDIT.MODE = "EDIT" THEN    ;* CUSTOMER RECORD LOCKED, OK TO EDIT
         GOSUB ENABLE.CM.CTRLS      ;*   ENABLE THE CONTROLS AND WAIT FOR NEXT EVENT
      END ELSE                      ;*   ELSE CUSTOMER WAS BUSY, NO EDIT ALLOWED
         CAPTION = 'Customer Maitenance - VIEW Mode'
         CALL ATGUISETPROP(GUIAPP,GUIFRM,"",GPCAPTION,0,0,CAPTION,GUIERRORS,GUISTATE)
      END
*
   CASE CALLER_ACTION = CM_NEW
      CALL  NXT.NEXTNBR("CUSTOMERS",CM_NUMBER,ERROR_STATUS,GUIERRORS,GUISTATE)  ;* ASSIGN A NEW CUST NUMBER AND DISPLAY, THATS ALL
      CALL ATGUISETPROP(GUIAPP,GUIFRM,"LBLCUSTIDVAL",GPVALUE,0,0,CM_NUMBER,GUIERRORS,GUISTATE) ;* DISPLAY CUST NUMBER
      IF GUIERRORS<1> >= NXT.GUI.ERROR.LEVEL THEN GOSUB GUI.ERROR; GOTO STARTUP.999
*
      CM_ID  = CM_NUMBER      ;* SET CUSTOMER ID (NEW CUSTOMER NUMBER)
      CALL  NXT.NEXTNBR("SHIP_TO*":CM_ID,SHIPTO_NUMBER,ERROR_STATUS,GUIERRORS,GUISTATE)
*
      DEFAULT_CREATED = @FALSE ;* FLAG CREATION OF DEFAULT
      GOSUB ENABLE.CM.CTRLS   ;* ENABLE THE CONTROLS AND WAIT FOR NEXT EVENT
      GOSUB ENABLE.SHIPTO.CTRLS
      CM_REC = ''             ;* INITIALIZE NEW CUSTOMER RECORD
      SHIPTO_REC = ''
      SHIPTO_ID = CM_ID:'*':SHIPTO_NUMBER  ;* SET DEFAULT SHIPTO ID
*
   CASE CALLER_ACTION = CM_SHIP_EDIT
      GOSUB GET.CM.REC
      IF ERROR_STATUS = ERR_NOF THEN    ;* WE SHOULD NOT BE HERE WITH CUST NOF, CLEAN UP AND LEAVE
         RELEASE C.FILE.VAR(C.CUSTOMERS), CM_ID
         ERROR_MSG = "EDIT OF NON EXISTANT CUSTOMER: ":CM_ID
         ERROR_STATUS = ERR_SYS
         GOTO STARTUP.999
      END ELSE
         ERROR_STATUS = ''
      END
*
      GOSUB LOAD.CM.CTRLS         ;* LOAD CM CONTROLS
*
* ACCESS AND LOAD SHIP TO RECORD
* ENABLE SHIP TO CONTROLS
*
      GOSUB GET.SHIPTO.REC
      SAVE_SHIPTO_REC = SHIPTO_REC      ;* WE USE SAVE_SHIPTO TO SEE IF ANYTHING HAS CHANGED
      IF ERROR_STATUS = ERR_NOF THEN    ;* WE SHOULD NOT BE HERE WITH SHIPTO NOF, CLEAN UP AND LEAVE
         RELEASE C.FILE.VAR(C.CUSTOMERS), CM_ID
         RELEASE C.FILE.VAR(C.SHIP_TO), SHIPTO_ID
         ERROR_MSG = "EDIT OF NON EXISTANT CUSTOMER SHIPTO: ":SHIPTO_ID
         ERROR_STATUS = ERR_SYS
         GOTO STARTUP.999
      END ELSE
         ERROR_STATUS = ''
      END
      GOSUB LOAD.SHIPTO.CTRLS
*
* IF LOCK OF SHIPTO SUCCESSFUL, ENABLE CONTROLS
* OTHERWISE UNLOCK CUSTOMER REC AND OPEN IN VIEW MODE ONLY
*
      IF SHIPTO.EDIT.MODE # "EDIT" THEN
         RELEASE C.FILE.VAR(C.CUSTOMERS), CM_ID
         CM.EDIT.MODE = "VIEW"
      END
*
      IF CM.EDIT.MODE = "EDIT" THEN    ;* CUSTOMER RECORD LOCKED, OK TO EDIT
         GOSUB ENABLE.SHIPTO.CTRLS     ;* enable ship to edit
      END ELSE                      ;*   ELSE CUSTOMER WAS BUSY, NO EDIT ALLOWED
         CAPTION = 'Customer Maitenance - VIEW Mode'
         CALL ATGUISETPROP(GUIAPP,GUIFRM,"",GPCAPTION,0,0,CAPTION,GUIERRORS,GUISTATE)
      END
*
   CASE CALLER_ACTION = CM_SHIP_NEW
*
      GOSUB GET.CM.REC
      SAVE_CM_REC = CM_REC              ;* WE USE SAVE_CM TO SEE IF ANYTHING HAS CHANGED
      IF ERROR_STATUS = ERR_NOF THEN    ;* WE SHOULD NOT BE HERE WITH CUST NOF, CLEAN UP AND LEAVE
         RELEASE C.FILE.VAR(C.CUSTOMERS), CM_ID
         ERROR_MSG = "Ship to ADD OF NON EXISTANT CUSTOMER: ":CM_ID
         ERROR_STATUS = ERR_SYS
         GOTO STARTUP.999
      END ELSE
         ERROR_STATUS = ''
      END
*
      CALL  NXT.NEXTNBR("SHIP_TO*":CM_ID,SHIPTO_NUMBER,ERROR_STATUS,GUIERRORS,GUISTATE)
      SHIPTO_REC = ''
      SHIPTO_ID = CM_ID:'*':SHIPTO_NUMBER
      GOSUB LOAD.CM.CTRLS         ;* LOAD CM CONTROLS
      GOSUB ENABLE.SHIPTO.CTRLS
*
END CASE
*
*
CALL ATGUISHOW('CM','CM','','',GUIERRORS,GUISTATE)
IF GUIERRORS<1> >= 2 THEN RETURN
*-->END GUI STARTUP<--*
*
STARTUP.999: *
*
* CATCH NON GUI SYSTEM ERRORS
* IE ANY NEXTJOB ERRORS OCCURRED, LOG AND EXIT
*
IF ERROR_STATUS # '' THEN
   LOG.OPTS = "DISPLAY"
   ERROR_NBR = ERROR_STATUS
   IF ERROR_MSG = '' THEN ERROR_MSG =  ERR_MESSAGE(ERR_SYS)
   CALL LOG.ERROR(LOG.OPTS,"CM.DIALOG", ERROR_NBR, ERROR_MSG, GUIERRORS, GUISTATE)
   GOSUB GUI.CM.CM.CLOSE
   RETURN
END
************************************************************
*
*
*-->BEGIN EVENT LOOP<--*
GUI.DLG.EXIT = 0
LOOP
   CALL ATGUIWAITEVENT(GUIAPP,GUIFRM,GUICTL,GUIEVT,GUIARGS,GUIERRORS,GUISTATE)
   IF GUIERRORS<1> >= 2 THEN RETURN
   IF GUIEVT EQ GEQUIT THEN
      GUI.DLG.EXIT = 1
   END ELSE
      GUIAPP=OCONV(GUIAPP,'MCU')
      GUIFRM=OCONV(GUIFRM,'MCU')
      GUICTL=OCONV(GUICTL,'MCU')
      GOSUB GUI.DECODE.EVENT
   END
UNTIL GUI.DLG.EXIT DO REPEAT
* Eat final Quit event
IF GUIEVT <> GEQUIT THEN
   GUI.APP.LIST = ''
   CALL ATGUIGETPROP('','','',GPSTATUS,2,0,GUI.APP.LIST,'',GUISTATE)
   IF GUI.APP.LIST EQ '' THEN
* Quit event fired after last GUI object is deleted - discard it
      CALL ATGUIWAITEVENT('','','','','','',GUISTATE)
* We could call ATGUISHUTDOWN here if we wanted, but there's no
* harm just leaving the GUI environment initialized, in case we
* want to use it again...
   END
END
*-->END EVENT LOOP<--*
*
*
************************************************************
*
*
*-->BEGIN GUI TRAILER<--*
RETURN
*
GUI.DIALOG.RETURN: *
* This subroutine is called just before the GUI Dialog app
* is deleted. Check the state of the ACCEPT variable, and
* retrieve values from GUI controls and assign to appropriate
* arguments for return to calling program here...
*IF ACCEPT THEN
*    Add your code here...
*END ELSE
*    Add your code here...
*END
*
RETURN
*-->END GUI TRAILER<--*
*
*
************************************************************
*
*
*-->BEGIN EVENT DECODER<--*
GUI.DECODE.EVENT: *
IF NUM(GUIEVT) THEN
   BEGIN CASE
      CASE GUIAPP='CM'
         BEGIN CASE
            CASE GUIFRM='CM'
               BEGIN CASE
                  CASE GUICTL=''
                     BEGIN CASE
                        CASE GUIEVT=GECLOSE
                           GOSUB GUI.CM.CM.CLOSE;GUIEVT=0
                     END CASE
                  CASE GUICTL='BTNCANCEL'
                     BEGIN CASE
                        CASE GUIEVT=GECLICK
                           GOSUB GUI.CM.CM.BTNCANCEL.CLICK;GUIEVT=0
                     END CASE
                  CASE GUICTL='BTNDEFAULT'
                     BEGIN CASE
                        CASE GUIEVT=GECLICK
                           GOSUB GUI.CM.CM.BTNDEFAULT.CLICK;GUIEVT=0
                     END CASE
                  CASE GUICTL='BTNDELETE'
                     BEGIN CASE
                        CASE GUIEVT=GECLICK
                           GOSUB GUI.CM.CM.BTNDELETE.CLICK;GUIEVT=0
                     END CASE
                  CASE GUICTL='BTNDELSHIP'
                     BEGIN CASE
                        CASE GUIEVT=GECLICK
                           GOSUB GUI.CM.CM.BTNDELSHIP.CLICK;GUIEVT=0
                     END CASE
                  CASE GUICTL='BTNFILE'
                     BEGIN CASE
                        CASE GUIEVT=GECLICK
                           GOSUB GUI.CM.CM.BTNFILE.CLICK;GUIEVT=0
                     END CASE
                  CASE GUICTL='CHKDEFAULT'
                     BEGIN CASE
                        CASE GUIEVT=GECLICK
                           GOSUB GUI.CM.CM.CHKDEFAULT.CLICK;GUIEVT=0
                     END CASE
                  CASE GUICTL='GRDCONTACT'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATEROW
                           GOSUB GUI.CM.CM.GRDCONTACT.VALIDATEROW;GUIEVT=0
                     END CASE
                  CASE GUICTL='LST1BILLST'
                     BEGIN CASE
                        CASE GUIEVT=GECLICK
                           GOSUB GUI.CM.CM.LST1BILLST.CLICK;GUIEVT=0
                     END CASE
                  CASE GUICTL='LST1SHIPST'
                     BEGIN CASE
                        CASE GUIEVT=GECLICK
                           GOSUB GUI.CM.CM.LST1SHIPST.CLICK;GUIEVT=0
                     END CASE
                  CASE GUICTL='LST1TERMS'
                     BEGIN CASE
                        CASE GUIEVT=GECLICK
                           GOSUB GUI.CM.CM.LST1TERMS.CLICK;GUIEVT=0
                     END CASE
                  CASE GUICTL='LSTSTATUS'
                     BEGIN CASE
                        CASE GUIEVT=GECLICK
                           GOSUB GUI.CM.CM.LSTSTATUS.CLICK;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1ARLIMIT'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1ARLIMIT.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1BILLADDR1'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1BILLADDR1.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1BILLADDR2'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1BILLADDR2.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1BILLCITY'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1BILLCITY.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1BILLNAME'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1BILLNAME.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1BILLZIP'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1BILLZIP.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1COUNTRY'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1COUNTRY.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1FAX'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1FAX.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1PHONE'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1PHONE.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1SHIPADDR1'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1SHIPADDR1.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1SHIPADDR2'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1SHIPADDR2.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1SHIPCITY'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1SHIPCITY.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1SHIPCOUNTRY'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1SHIPCOUNTRY.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1SHIPDAYS'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1SHIPDAYS.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1SHIPFAX'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1SHIPFAX.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1SHIPNAME'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1SHIPNAME.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1SHIPPHONE'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1SHIPPHONE.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXT1SHIPZIP'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXT1SHIPZIP.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXTQBREF'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXTQBREF.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXTREP'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXTREP.VALIDATE;GUIEVT=0
                     END CASE
                  CASE GUICTL='TXTWEB'
                     BEGIN CASE
                        CASE GUIEVT=GEVALIDATE
                           GOSUB GUI.CM.CM.TXTWEB.VALIDATE;GUIEVT=0
                     END CASE
               END CASE
         END CASE
   END CASE
   IF GUIEVT THEN
* Unhandled event - may be dynamic
      GOSUB GUI.DYNAMIC.EVENTS
   END
END ELSE
   GOSUB GUI.CUSTOM.EVENTS
END
RETURN
*-->END EVENT DECODER<--*
*
*
************************************************************
*
*
*-->BEGIN EVENT HANDLER<--*
GUI.CM.CM.BTNDEFAULT.CLICK: *
GOSUB CREATE.DEFAULT.SHIPTO
RETURN
*-->END EVENT HANDLER<--*
*
*
************************************************************
*
*
*-->BEGIN EVENT HANDLER<--*
GUI.CM.CM.CHKDEFAULT.CLICK: *
CM_REC<CM_DEFAULT_SHIPTO> = SHIPTO_ID
RETURN
*-->END EVENT HANDLER<--*
*
*
************************************************************
*
*
*-->BEGIN CLOSE EVENT HANDLER<--*
GUI.CM.CM.CLOSE: *
* Default form close event handler
CALL ATGUIHIDE(GUIAPP,GUIFRM,'','',GUIERRORS,GUISTATE)
IF GUIERRORS<1> >= 2 THEN GOTO GUI.ERROR
CALL ATGUIGETPROP(GUIAPP,'','',GPSTATUS,0,0,NUM.FORMS,GUIERRORS,GUISTATE)
IF GUIERRORS<1> >= 2 THEN GOTO GUI.ERROR
IF NUM.FORMS = 0 THEN
   GOSUB GUI.DIALOG.RETURN
   CALL ATGUIDELETE(GUIAPP,'','',GUIERRORS,GUISTATE)
   IF GUIERRORS<1> >= 3 THEN GOTO GUI.ERROR
   GUI.DLG.EXIT = 1
END
RELEASE C.FILE.VAR(C.CUSTOMERS), CM_ID
IF SHIPTO_ID # '' THEN RELEASE C.FILE.VAR(C.CUSTOMERS), SHIPTO_ID
RETURN
*-->END CLOSE EVENT HANDLER<--*
*
*
************************************************************
*
*
*-->BEGIN EVENT HANDLER<--*
GUI.CM.CM.BTNCANCEL.CLICK: *
IF CALLER_ACTION = CM_NEW OR CALLER_ACTION = CM_EDIT THEN
   GOSUB SAVE.CHECK
END ELSE
* ASSUME CM_SHIP_NEW OR CM_SHIP_EDIT
   GOSUB SHIP.CHECK
END
*
IF SAVE.CHECK.OK THEN
   GOSUB GUI.CM.CM.CLOSE;GUIEVT=0
END
RETURN
*-->END EVENT HANDLER<--*
*
**************************************************************
*-->BEGIN EVENT HANDLER<--*
GUI.CM.CM.BTNDELSHIP.CLICK: *
*
* TEST FOR ORDER RECORDS WITH THIS SHIP TO
SLIST = 'SSELECT ORDER_PARENT WITH OP_SHIPTO = "':SHIPTO_ID:'"'
EXECUTE SLIST CAPTURING DMMY.OUT
IF @SELECTED GE 1 THEN
   EMSG = "ORDER record(s) on file for customer ship to, ship to NOT deleted"
   GOTO DSC900
END
*
* TEST FOR SALES RECORDS WITH THIS SHIP TO
SLIST = 'SSELECT SALES WITH SA_SHIP_TO = "':SHIPTO_ID:'"'
EXECUTE SLIST CAPTURING DMMY.OUT
IF @SELECTED GE 1 THEN
   EMSG = "SALES record(s) on file for customer ship to, ship to NOT deleted"
   GOTO DSC900
END
*
DSC900:
IF EMSG # '' THEN
   PRMPT = EMSG
   CAPTION = "Customer Maintenance"
   STYLE   = 4  ;* i
   BUTTONS = 0  ;* ok
   HELPID = ""
   CALL NXT.ERR.MSG(PRMPT, CAPTION, STYLE, BUTTONS, HELPID, RESPONSE, GUIERRORS,GUISTATE)
END ELSE
   DELETE C.FILE.VAR(C.SHIP_TO), SHIPTO_ID
   RELEASE C.FILE.VAR(C.SHIP_TO), SHIPTO_ID
   SHIPTO_ID = ''
   SHIPTO_REC = ''
   SAVE_SHIPTO_REC = ''
   GOSUB LOAD.SHIPTO.CTRLS
   PRMPT = "Customer ship to record has been deleted"
   CAPTION = "Customer Maintenance"
   STYLE   = 4  ;* i
   BUTTONS = 0  ;* ok
   HELPID = ""
   CALL NXT.ERR.MSG(PRMPT, CAPTION, STYLE, BUTTONS, HELPID, RESPONSE, GUIERRORS,GUISTATE)
   GOSUB GUI.CM.CM.CLOSE;GUIEVT=0
END
*
RETURN
*-->END EVENT HANDLER<--*
*
*
*************************************************************
*-->BEGIN EVENT HANDLER<--*
GUI.CM.CM.BTNDELETE.CLICK: *
*
* delete customer selected
EMSG = ''
*
* TEST FOR ORDER RECORDS WITH THIS customer
SLIST = 'SSELECT ORDER_PARENT WITH OP_CUST = "':CM_ID:'"'
EXECUTE SLIST CAPTURING DMMY.OUT
IF @SELECTED GE 1 THEN
   EMSG = "ORDER record(s) on file for customer, customer NOT deleted"
   GOTO DCC900
END
*
* TEST FOR AR RECORDS WITH THIS CUSTOMER
SLIST = 'SSELECT AR WITH AR_CUST_ID = "':CM_ID:'"'
EXECUTE SLIST CAPTURING DMMY.OUT
IF @SELECTED GE 1 THEN
   EMSG = "AR record(s) on file for customer, customer NOT deleted"
   GOTO DCC900
END
*
* TEST FOR SALES RECORDS WITH THIS CUSTOMER
SLIST = 'SSELECT SALES WITH SA_CUST_ID = "':CM_ID:'"'
EXECUTE SLIST CAPTURING DMMY.OUT
IF @SELECTED GE 1 THEN
   EMSG = "SALES record(s) on file for customer, customer NOT deleted"
   GOTO DCC900
END
*
* TEST FOR SHIPTO RECORDS WITH THIS customer
SLIST = 'SSELECT SHIP_TO WITH CS_CM_ID = "':CM_ID:'"'
EXECUTE SLIST CAPTURING DMMY.OUT
IF @SELECTED GE 1 THEN
   EMSG = "Ship_to record(s) on file for customer, customer NOT deleted"
   GOTO DCC900
END
*
DCC900:
IF EMSG # '' THEN
   PRMPT = EMSG
   CAPTION = "Customer Maintenance"
   STYLE   = 4  ;* i
   BUTTONS = 0  ;* ok
   HELPID = ""
   CALL NXT.ERR.MSG(PRMPT, CAPTION, STYLE, BUTTONS, HELPID, RESPONSE, GUIERRORS,GUISTATE)
END ELSE
   DELETE C.FILE.VAR(C.CUSTOMERS), CM_ID
   RELEASE C.FILE.VAR(C.CUSTOMERS), CM_ID
   CM_ID = ''
   CM_REC = ''
   SAVE_CM_REC = ''
   GOSUB LOAD.CM.CTRLS
   PRMPT = "Customer record: ":CM_ID:" has been deleted"
