CM.SHIPTO.VALIDATE: *
*
* VALIDATE THE CM RECORD
* RETURNS CM.REC.VALID T/F
*
CM.SHIPTO.VALID = @TRUE
CM.VALIDATE.MSG = ''
*
BEGIN CASE
*
   CASE  CM_REC<CM_STATUS> = ''
      CM.VALIDATE.MSG = 'Customer status is a required field'
*
   CASE CM_REC<CM_NAME> = ''
      CM.VALIDATE.MSG = 'Customer name is a required field'
*
   CASE CM_REC<CM_ADDR> = ''
      CM.VALIDATE.MSG = 'Customer street address is a required field'
*
   CASE CM_REC<CM_CITY> = ''
      CM.VALIDATE.MSG = 'Customer city is a required field'
*
   CASE  CM_REC<CM_STATE> = ''
      CM.VALIDATE.MSG = 'Customer state is a required field'
*
   CASE  CM_REC<CM_ZIP> = ''
      CM.VALIDATE.MSG = 'Customer zip code is a required field'
*
   CASE  CM_REC<CM_TERMS> = ''
      CM.VALIDATE.MSG = 'Customer payment terms'
*
   CASE  CM_REC<CM_AR_LIMIT> < 0
      CM.VALIDATE.MSG = 'Customer credit limit must be >= 0'
*
   CASE CALLER_ACTION = CM_NEW AND SHIPTO_REC = ""
      CM.VALIDATE.MSG = 'New customer requires a ship to'
*
   CASE  SHIPTO_REC # ''
*
* VALIDATE SHIP TO RECORD ALSO
*
      BEGIN CASE
*
         CASE SHIPTO_REC<CS_NAME> = ''
            CM.VALIDATE.MSG = 'Ship to name is a required field'
*
         CASE SHIPTO_REC<CS_ADDR> = ''
            CM.VALIDATE.MSG = 'Ship to street address is a required field'
*
         CASE SHIPTO_REC<CS_CITY> = ''
            CM.VALIDATE.MSG = 'Ship to city is a required field'
*
         CASE  SHIPTO_REC<CS_STATE> = ''
            CM.VALIDATE.MSG = 'Ship to state is a required field'
*
         CASE  SHIPTO_REC<CS_ZIP> = ''
            CM.VALIDATE.MSG = 'Ship to zip code is a required field'
         CASE SHIPTO_REC<CS_SHIP_DAYS> = ''
            SHIPTO_REC<CS_SHIP_DAYS> = 0
         CASE SHIPTO_REC<CS_SHIP_DAYS> < 0
            CM.VALIDATE.MSG = 'Ship to ship days cannot be negative'
      END CASE
END CASE
IF CM.VALIDATE.MSG # '' THEN
   CM.SHIPTO.VALID = @FALSE
   PRMPT = CM.VALIDATE.MSG:', please correct'
   CAPTION = "Customer Maintenance"
   STYLE   = 2  ;* !
   BUTTONS = 0  ;* ok / cancel
   HELPID = ""
   CALL NXT.ERR.MSG(PRMPT, CAPTION, STYLE, BUTTONS, HELPID, RESPONSE, GUIERRORS,GUISTATE)
END
RETURN
